@{
    ViewData["Title"] = "About Us - QuickCab";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>About Us | QuickCab</title>
    <link rel="stylesheet" href="/css/aboutus.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Header with Background Slideshow or Image -->
    <header class="about-header">
        <nav class="about-nav">
            <ul>
                <li><a href="/" class="nav-link">Home</a></li>
                <li><a href="/Ride/BookRide" class="nav-link">Book Ride</a></li>
                <li><a href="/AboutUs" class="nav-link active">About Us</a></li>
                <li><a href="/Contact" class="nav-link">Contact</a></li>
            </ul>
        </nav>
        <div class="about-hero">
            <h1>About QuickCab</h1>
            <p>Your reliable partner in urban mobility, committed to safety, efficiency, and excellence.</p>
            <!-- New Sign Up Button -->
            <a href="/Account/SignUp" class="cta-btn">Sign Up</a>
        </div>
    </header>

    <!-- Mission & Vision Section -->
    <section class="mission-vision">
        <div class="mission">
            <h2>Our Mission</h2>
            <p>
                At QuickCab, our mission is to provide a fast, reliable, and secure taxi service
                that empowers our customers to reach their destination with ease and comfort.
            </p>
        </div>
        <div class="vision">
            <h2>Our Vision</h2>
            <p>
                We strive to be the leading ride-hailing service in the region by continuously
                innovating and ensuring top-notch customer service and modern fleet quality.
            </p>
        </div>
    </section>

    <!-- Team Section -->
    <section class="team">
        <h2>Meet Our Team</h2>
        <div class="team-container">
            <div class="team-member">
                <img src="/images/team1.jpg" alt="Tarek Fahmi" />
                <h3>Tarek Fahmi</h3>
                <p>Founder &amp; CEO</p>
            </div>
            <div class="team-member">
                <img src="/images/team2.jpg" alt="Jane Doe" />
                <h3>Jane Doe</h3>
                <p>CTO</p>
            </div>
            <div class="team-member">
                <img src="/images/team3.jpg" alt="John Smith" />
                <h3>John Smith</h3>
                <p>Operations Manager</p>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="about-footer">
        <p>&copy; 2025 QuickCab. All rights reserved.</p>
    </footer>
</body>
</html>
