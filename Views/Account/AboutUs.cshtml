@{
    ViewData["Title"] = "About Us - QuickCab";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/aboutus.css" asp-append-version="true" />
}

<!-- Hero Section -->
<div class="about-hero">
    <div class="about-hero-content">
        <h1>About QuickCab</h1>
        <p>Your reliable partner in urban mobility — committed to safety, speed, and simplicity.</p>
    </div>
</div>

<!-- Mission & Vision -->
<section class="mission-vision">
    <div>
        <h2>Our Mission</h2>
        <p>To provide fast, comfortable, and secure transportation that empowers people to move freely and affordably.</p>
    </div>
    <div>
